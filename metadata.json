{
  "name": "nickchappell/heka",
  "version": "0.1.0",
  "author": "Nicholas Chappell",
  "summary": "This module installs and configure Heka, a metrics and event stream processor.",
  "license": "Apache 2.0",
  "source": "https://github.com/nickchappell/puppet-heka",
